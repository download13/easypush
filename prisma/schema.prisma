generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/db.sqlite"
}

model BrowserHandle {
  id            Int            @id @default(autoincrement())
  subscription  String
  enabled       Boolean        @default(true)

  channels      Channel[]
}

model Channel {
  id            String         @id @default(cuid())
  label         String

  handleId      Int
  handle        BrowserHandle  @relation(fields: [handleId], references: [id])
}
